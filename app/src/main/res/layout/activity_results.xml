<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Toolbar
        android:id="@+id/result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

    </Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        >
            <TextView
                android:id="@+id/result_quiz_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz name"
                android:layout_marginTop="25dp"
                android:textSize="30sp"
                />
            <TextView
                android:id="@+id/result_quiz_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result_quiz_name"
                android:textSize="18sp"
                android:text="this is the quiz descitption "
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/result_user_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result_quiz_desc"
                android:layout_marginTop="20dp"
                android:textSize="40sp"
                android:text="25"/>

            <TextView
                android:id="@+id/result_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/result_user_score"
                android:layout_below="@+id/result_quiz_desc"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:text="outof" />

            <TextView
                android:id="@+id/result_quiz_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/result_placeholder"
                android:layout_below="@+id/result_quiz_desc"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="25"
                android:textSize="40sp"/>
            <TextView
                android:id="@+id/result_given_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result_user_score"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:text="date" />
    </RelativeLayout>

    <Button
        android:id="@+id/result_go_home"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="@string/home_button"
        />
    
</LinearLayout>